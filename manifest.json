{
  "manifest_version": 2,
  "name": "OlimpInside",
  "description": "Save link with comment to knowlege databse",
  "version": "0.6",
  "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  "page_action": {
    "default_title": "OlimpInside Knowlege Database",
    "default_icon": "48x48.png",
    "default_popup": "popup.html",
    "default_icon": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
